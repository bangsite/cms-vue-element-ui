{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": [
        "src/**/*.vue",
        "src/**/**/*.vue",
        "src/**/*.ts",
        "src/**/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "env.d.ts"
    ],
    "exclude": [
        "node_modules",
        "src/**/__tests__/*"
    ],
    "compilerOptions": {
        "composite": true,
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
        "baseUrl": ".",
        "sourceMap": true,
        "paths": {
            "@/*": ["./src/*"],
        }
    }
}
