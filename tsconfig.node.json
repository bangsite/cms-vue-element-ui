{
    "extends": "@tsconfig/node20/tsconfig.json",
    "include": [
        "vite.config.*",
        "vitest.config.*",
        "cypress.config.*",
        "playwright.config.*"
    ],
    "compilerOptions": {
        "composite": true,
        "skipLibCheck": true,
        "module": "ESNext",
        "noEmit": true,
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
        "moduleResolution": "Bundler",
        "types": [
            "node"
        ],
        //        "moduleResolution": "Node",
        "allowSyntheticDefaultImports": true
    }
}
